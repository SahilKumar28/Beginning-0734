#include<stdio.h>
int main(){
 int i,j,k,n,frequency=0;
 printf("Enter the no of rows for the upper half of the diamond:");
 scanf("%d",&n);
 for(i=1;i<=n+1;i++){
 	for(j=1;j<=i;j++){
 		for(k=i;k<=n&&frequency!=1;k++){
 			printf(" ");
		 }
		 frequency=1;
	 printf("* ");
 }
 printf("\n");
 frequency=0;
}
frequency=0;
 for(i=n;i>=1;i--){
 	for(j=1;j<=i;j++){
 		for(k=n;k>=i&&frequency!=1;k--){
 			printf(" ");
		 }
	 printf("* ");
	 frequency=1;
 }
 printf("\n");
 frequency=0;
}
}
