//With The help of chatgpt
#include <stdio.h>
int main() {
    char str[20], reverse[20];
    int len = 0, i, j;
    printf("Enter the string: ");
    gets(str);
    while (str[len] != '\0') {
        len++;
    }
    for (i = len - 1, j = 0; i >= 0; i--, j++) {
        reverse[j] = str[i];
    }
    reverse[j] = '\0';
    int is_palindrome = 1;
    for (i = 0; i < len; i++) {
        if (str[i] != reverse[i]) {
            is_palindrome = 0;
            break;
        }
    }
    if (is_palindrome) {
        printf("It is a palindrome\n");
    } else {
        printf("It is not a palindrome\n");
    }
return 0;
}








