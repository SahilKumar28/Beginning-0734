#include<stdio.h>
void func(float a,float b,char c){
 float result;
 if(c=='+')result=a+b;
 else if(c=='-')result=a-b;
 if(c=='*')result=a*b;
 if(c=='/')result=a/b;
 printf("%.2f",result);
}
int main(){
 float n1,n2;char symb;
 printf("Enter the first no:");
 scanf("%f",&n1);
 printf("Enter the second no:");
 scanf("%f",&n2);
 printf("Enter the symbol for opertaion:");
 scanf(" %c",&symb);
 func(n1,n2,symb);
}
